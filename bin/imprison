#!/usr/bin/env ruby
#
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '../lib')

require 'imprison'
require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.banner = 'Usage: imprison [options] UUID'

  opts.on('-d', '--dir DIR', String, 'Specify plugin direcotry') do |dir|
    options[:dir] = dir
  end
  opts.on('--no-backup', 'Do not create backup file') do |no_backup|
    options[:no_backup] = no_backup
  end
end.parse!

begin
  Imprison.run(ARGV.first, options)
rescue => e
  puts e
  exit 1
end
